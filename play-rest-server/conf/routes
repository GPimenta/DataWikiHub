# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# POST    /articles                  controllers.HomeController.createArticle(request:Request)

# JSON endpoints for articles
GET    /articles                   controllers.HomeController.list(request:Request)
GET    /articles/:id               controllers.HomeController.show(request:Request, id: Int)
GET    /articles/title/:title      controllers.HomeController.showByTitle(request:Request, title: String)
PUT    /articles/:id               controllers.HomeController.update(request:Request, id: Int)
PUT    /articles/title/:title      controllers.HomeController.updateByTitle(request:Request, title: String)
POST   /articles                   controllers.HomeController.create(request:Request)